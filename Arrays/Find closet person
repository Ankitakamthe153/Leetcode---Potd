public class PersonRace {
    public static int whoReachesFirst(int x, int y, int z) {
        int dist1 = Math.abs(x - z); // Distance for Person 1
        int dist2 = Math.abs(y - z); // Distance for Person 2

        if (dist1 == dist2) {
            return 0; // Both arrive at the same time
        } else if (dist1 < dist2) {
            return 1; // Person 1 arrives first
        } else {
            return 2; // Person 2 arrives first
        }
    }

    public static void main(String[] args) {
        // Example test cases
        System.out.println(whoReachesFirst(2, 7, 4)); // Output: 1
        System.out.println(whoReachesFirst(2, 5, 6)); // Output: 2
        System.out.println(whoReachesFirst(1, 5, 3)); // Output: 0
    }
}
